generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  name      String?
  entries   Entry[]
  createdAt DateTime @default(now())
  token     String?   // for magic-link short-lived
  tokenExp  DateTime?
}

model Entry {
  id        Int     @id @default(autoincrement())
  date      String  // e.g. "2025-10-19"
  type      String
  note      String?
  modifiedAt DateTime @default(now())
  user      User?   @relation(fields: [userId], references: [id])
  userId    Int?
}
